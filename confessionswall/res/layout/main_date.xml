<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	
        <RelativeLayout
            android:id="@+id/content_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#66cccc"
            android:paddingTop="10dp"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/calader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:contentDescription="日历"
                android:src="@drawable/calader"  
                android:visibility="visible"/>
 
 
            <TextView
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/calader"
                android:layout_marginLeft="20dp"
                 
                android:text="JUL"
                android:textColor="#77000000"
                android:textSize="50sp" />

            <TextView 
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/month"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-10dp"
                android:text="2013"
                android:textColor="#77000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/year"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-10dp"
                android:text="Friday"
                android:textColor="#77000000"
                android:textSize="22sp" />

        <ImageView
            android:id="@+id/left_anrrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/yuan" />
        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/week"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:text="00"
            android:textColor="#fff"
            android:textSize="165sp"
            android:typeface="serif" />
        </RelativeLayout>


</LinearLayout>